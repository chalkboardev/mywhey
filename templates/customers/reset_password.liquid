
<section class="account-form-page reset-password vertical-padding">
  
  <div class="account-form-wrapper register-form vertical-margin">
    <h1 class="heading-md">{{ 'customer.reset_password.title' | t }}</h1>
    <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>
    
    {%- form 'reset_customer_password', class: 'account-form' -%}
      {% render 'v3-form-response-messages', form: form %}
      
      {% assign password_label = 'customer.reset_password.password' | t %}
      {% render 'v3-form-field',
        type: "password"
        id: "password",
        name: "customer[password]",
        label: password_label, 
        placeholder: password_label,
        attributes: 'autocomplete="new-password"', 
        required: true, 
      %}
      
      {% assign password_confirmation_label = 'customer.reset_password.password_confirm' | t %}
      {% render 'v3-form-field',
        type: "password",
        id: "password_confirmation",
        name: "customer[password_confirmation]",
        label: password_confirmation_label, 
        placeholder: password_confirmation_label,
        attributes: 'autocomplete="new-password"', 
        required: true, 
      %}
      
      <button class="button-1 reset-password-submit">
        {{ 'customer.reset_password.submit' | t }}
      </button>
      
    {%- endform -%}
  </div>

</section>
