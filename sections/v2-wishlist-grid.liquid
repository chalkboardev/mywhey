<div
  class="wishlist-grid-section"
  style="background-color: {{ section.settings.bg_color }}; background: url( {{ section.settings.bg_image | image_url: format: "jpg" }}); background-size: {{ section.settings.image_fit }}; padding-top: {{ section.settings.padding-top }}%; padding-bottom: {{ section.settings.padding-bottom }}% "
>
  <div class="wishlist-page page-width">
    <div style="display: flex; justify-content: space-between; margin-bottom: 25px; align-items: center;">
      <h1 test>
        {{ page.title }}
      </h1>
      <h3 class=" m-0 heading-md">{{ section.settings.heading }}</h3>

      {% if section.settings.section_link != blank and section.settings.section_link_value %}
        <a href="{{ section.settings.section_link }}" class="button" aria-label="Link to {{ section.settings.section_link_value }}"> {{ section.settings.section_link_value }} </a>
      {% endif %}
    </div>

    <div style="margin-bottom:100px" class="wishlist__grid " grid-wishlist>
      {% comment %} Sample loading element {% endcomment %}
      <p class="wishlist__loader full-width text-center">Loading...</p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Wishlist Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Wishlist"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Colour",
      "default": "#FFF"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image Picker"
    },
    {
      "type": "select",
      "id": "image_fit",
      "label": "Image Fit",
      "options": [
        {
          "value": "contain",
          "label": "Contain"
        },
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "fill",
          "label": "Fill"
        }
      ],
      "default": "cover"
    },
    {
      "type": "text",
      "id": "section_link_value",
      "label": "Link Text",
      "info": "Both this and 'Section Link' MUST be filled in for the button to appear."
    },
    {
      "type": "url",
      "id": "section_link",
      "label": "Section Link",
      "info": "Both this and the 'Link Text' MUST be filled in for the button to appear."
    },
    {
      "type": "range",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "id": "padding-bottom",
      "label": "Padding Bottom",
      "default": 2
    },
    {
      "type": "range",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "id": "padding-top",
      "label": "Padding Top",
      "default": 2
    }
  ],
  "presets": [
    {
      "name": "Wishlist Grid"
    }
  ]
}
{% endschema %}
