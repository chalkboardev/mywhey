    {% comment %} POLICY PAGES {% endcomment %}
    {{ 'page-policies.min.css' | asset_url | stylesheet_tag: preload: true }}

{% elsif template == 'customers/register' %}
    {{ 'page-register.min.css' | asset_url | stylesheet_tag: preload: true }}

{% elsif template == 'customers/login' %}
    {{ 'page-login.min.css' | asset_url | stylesheet_tag: preload: true }}
{% elsif template == 'customers/activate_account' %}
    {{ 'page-activate-account.min.css' | asset_url | stylesheet_tag: preload: true }}

    {% elsif template == 'customers/reset_password' %}
    {{ 'page-reset-password.min.css' | asset_url | stylesheet_tag: preload: true }}

{% elsif template == 'customers/account' %}
    {{ 'page-account.min.css' | asset_url | stylesheet_tag: preload: true }}

