<div id="AddAddress" class="address-form-wrapper">
    <h2 id="AddressNewHeading" class="heading-md">{{ 'customer.addresses.add_new' | t }}</h2>
    {%- form 'customer_address', customer.new_address, class: "address-form", aria-labelledBy: 'AddressNewHeading', return_to: 'back' -%}

      <div class="field name-input first-name">
        <input type="text" id="AddressFirstNameNew" name="address[first_name]" value="{{ form.first_name }}" autocomplete="given-name" placeholder="{{ 'customer.addresses.first_name' | t }}*" required>
        <label for="AddressFirstNameNew">{{ 'customer.addresses.first_name' | t }}</label>
      </div>

      <div class="field name-input last-name">
        <input type="text" id="AddressLastNameNew" name="address[last_name]" value="{{ form.last_name }}" autocomplete="family-name" placeholder="{{ 'customer.addresses.last_name' | t }}">
        <label for="AddressLastNameNew">{{ 'customer.addresses.last_name' | t }}</label>
      </div>

      <div class="field address-input">
        <input type="text" id="AddressCompanyNew" name="address[company]" value="{{ form.company }}" autocomplete="organization" placeholder="{{ 'customer.addresses.company' | t }}">
        <label for="AddressCompanyNew">{{ 'customer.addresses.company' | t }}</label>
      </div>

      <div class="field address-input">
        <input type="text" id="AddressAddress1New" name="address[address1]" value="{{ form.address1 }}" autocomplete="address-line1" placeholder="{{ 'customer.addresses.address1' | t }}*" required>
        <label for="AddressAddress1New">{{ 'customer.addresses.address1' | t }}</label>
      </div>

      <div class="field address-input">
        <input type="text" id="AddressAddress2New" name="address[address2]" value="{{ form.address2 }}" autocomplete="address-line2" placeholder="{{ 'customer.addresses.address2' | t }}">
        <label for="AddressAddress2New">{{ 'customer.addresses.address2' | t }}</label>
      </div>

      <div class="field city-input">
        <input type="text" id="AddressCityNew" name="address[city]" value="{{ form.city }}" autocomplete="address-level2" placeholder="{{ 'customer.addresses.city' | t }}">
        <label for="AddressCityNew">{{ 'customer.addresses.city' | t }}</label>
      </div>
      
      {% comment %} Country Select Input {% endcomment %}
      <div class="field country-input">
        <label for="AddressCountryNew">{{ 'customer.addresses.country' | t }}</label>
        <div class="select">
          <select
            id="AddressCountryNew"
            name="address[country]"
            data-default="{{ form.country }}"
            autocomplete="country"
            data-address-country-select
          >
            {{ all_country_option_tags }}
          </select>
          <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
            <use href="#icon-caret" />
          </svg>
        </div>
      </div>

      {% comment %} Province Select Input {% endcomment %}
      <div id="AddressProvinceContainerNew" class="field province-input" style="display: none;">
        <label for="AddressProvinceNew">{{ 'customer.addresses.province' | t }}</label>
        <div class="select">
          <select
            id="AddressProvinceNew"
            name="address[province]"
            data-default="{{ form.province }}"
            autocomplete="address-level1"
          >
          </select>
          <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
            <use href="#icon-caret" />
          </svg>
        </div>
      </div>

      <div class="field zip-input">
        <input type="text" id="AddressZipNew" name="address[zip]" value="{{ form.zip }}" autocapitalize="characters" autocomplete="postal-code" placeholder="{{ 'customer.addresses.zip' | t }}*" required>
        <label for="AddressZipNew">{{ 'customer.addresses.zip' | t }}*</label>
      </div>
      <div class="field phone-input">
        <input type="tel" id="AddressPhoneNew" name="address[phone]" value="{{ form.phone }}" autocomplete="tel" placeholder="{{ 'customer.addresses.phone' | t }}" pattern="(((\+44)? ?(\(0\))? ?)|(0))( ?[0-9]{3,4}){3}">
        <label for="AddressPhoneNew">{{ 'customer.addresses.phone' | t }}</label>
      </div>

      <div class="field default-input">
        {%- capture label -%} {{ 'customer.addresses.set_default' | t }} {%- endcapture -%}
        {%- render 'v2-custom-checkbox', id: 'address_default_address_new', name: 'address[default]', label: label, value: 1, required: false -%}
      </div>

      <div class="field submit-input">
        <button class="button-1 add-address-trigger">{{ 'customer.addresses.add' | t }}</button>
        <button type="reset" data-modal-close="add-address" class="button-3 cancel-add-address">{{ 'customer.addresses.cancel' | t }}</button>
      </div>

    {%- endform -%}
</div>
